mixin Modal(id, modalTemplate)
    .modal(id=id)
        .modal__dialog
            button.btn__modal__close
            .modal__content
                +#{modalTemplate}(entry)

mixin ModalTemplate
    form(action="" id="form-callback")
        h3 Появились вопросы?
        p Мы готовы ответить на них в ближайшее время
        .phone
            p.input-title Ваш телефон
            input(type="tel") 
        .btn Отправить
        p.policy Нажимая на кнопку, вы соглашаетесь с политикой конфиденциальности
    